generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Meal {
  id            String @id @default(cuid())
  foods         String
  mealType      String
  time          String
  notes         String?
  items         FoodFeeling[]
  symptomTime   String?
  symptomEnd    String?
  painRating    Int @default(0)
  createdAt     DateTime @default(now())
  mealHistory   MealHistory[]
}

model FoodFeeling {
  id            String @id @default(cuid())
  food          String
  rating        Int
  notes         String?
  meal          Meal @relation(fields: [mealId], references: [id])
  mealId        String
}

model MealHistory {
  id            String @id @default(cuid())
  fields        String
  oldValue      String?
  newValue      String?
  timestamp     DateTime @default(now())
  meal          Meal @relation(fields: [mealId], references: [id])
  mealId        String
}